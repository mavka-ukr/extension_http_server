взяти біб мавка

http = мавка.завантажити_РМв1(ю"./розширення_мавки_http.so")

порт = 8080

дія обробник_запитів(метод, шлях, заголовки, тіло, відповісти)
  якщо метод == ю"get"
    відповісти(200, [ю"Content-Type"=ю"text/html; charset=utf-8"], ю"Привіт :)")
  інакше
    відповісти(200, [=], тіло)
  кінець
кінець

дія відклик_сервера(помилка)
  якщо помилка
    друк("Не вдалось запустити сервер:", помилка)
  інакше
    друк("Сервер запущено на порту", порт)
  кінець
кінець

http.serve(порт, обробник_запитів, відклик_сервера)